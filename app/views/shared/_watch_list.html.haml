.col-md-2.col-sm-6.col-xs-6{"data-animate-hover"=>"1"}
  .mb-2.animate-this
    =link_to movie_path(watch_list.movie_id) do
      =image_tag(watch_list.image_path, width: "100%")
  .m-2  
    %small #{time_ago_in_words(watch_list.created_at).capitalize} ago
  %center
    .mb-2
      =link_to remove_watch_lists_path(id: watch_list.movie_id), method: :post, remote: true do
        %button.btn.btn-sm.btn-dark.btn-icon-label{:type => "button"}
          %span.btn-inner--icon
            %ion-icon{:name => "checkmark", :size => "large"}
          %span.btn-inner--text Remove
